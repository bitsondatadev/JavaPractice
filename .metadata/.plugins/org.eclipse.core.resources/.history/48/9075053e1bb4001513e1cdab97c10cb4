package DataStructures; 

import org.junit.*;
import static org.junit.Assert.*;

public class QueueTest{

	Stack<Integer> queue;

	@BeforeClass
	public static void initialSetUp(){
	}

	@AfterClass
	public static void finalTearDown(){
	}
	
	@Before
	public void setUp(){
		queue = new Stack<Integer>();	
	}

	@After
	public void tearDown(){

	}

	@Test
	public void testInitialize(){
		assertNotNull(queue);
		assertTrue(queue.empty());
		assertNull(queue.peek());
		assertNull(queue.pop());
	}

	@Test
	public void testPushAndPopFromNull(){
		assertTrue(queue.empty());
		
		Integer expected = new Integer(5);
		queue.push(expected);
		
		assertFalse(queue.empty());
		assertEquals(1, queue.size());
		assertEquals(expected,queue.peek());
		assertEquals(expected,queue.pop());
		
		assertTrue(queue.empty());

	}
	
	@Test
	public void testPushAndPopAfterOneElement(){
		Integer five = new Integer(5);
		Integer eight = new Integer(8);
		
		queue.push(five);
		queue.push(eight);
		
		assertFalse(queue.empty());
		assertEquals(2, queue.size());
		assertEquals(eight,queue.peek());
		assertEquals(eight,queue.pop());
		
		assertEquals(1, queue.size());
		assertEquals(five,queue.peek());
		assertEquals(five,queue.pop());

		assertEquals(0, queue.size());
		assertTrue(queue.empty());

	}


}
