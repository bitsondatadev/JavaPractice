package DataStructures;

import java.util.List;
import java.util.ArrayList;

public class TreeNode<T extends Object>{

	protected TreeNode<T> parent = null;
	protected List<TreeNode<T>> children = null;
	protected T data;
	protected final int branchingFactor;
	public static final int DEFAULT_BRANCHING_FACTOR = 2;
	

	public TreeNode(T data){
		this.children = new ArrayList<TreeNode<T>>();
		this.branchingFactor = DEFAULT_BRANCHING_FACTOR;
		this.setData(data);	
	}
	
	public TreeNode(T data, int numChildren){
		this.children = new ArrayList<TreeNode<T>>();
		this.branchingFactor = numChildren;
		this.setData(data);	
	}
	
	public TreeNode(TreeNode<T> parent, T data){
		this.parent = parent;
		this.children = new ArrayList<TreeNode<T>>();
		this.branchingFactor = DEFAULT_BRANCHING_FACTOR;
		this.setData(data);	
	}
	
	public TreeNode(TreeNode<T> parent, T data, int numChildren){
		this.parent = parent;
		this.children = new ArrayList<TreeNode<T>>();
		this.branchingFactor = numChildren;
		this.setData(data);	
	}

	public List<TreeNode<T>> getChildren() {
		return children;
	}

	public boolean appendChild(TreeNode<T> child) {
		if(this.children.size() == this.branchingFactor ){
			return false;
		}
		
		return this.children.add(child);
	}
	
	public boolean removeChild(TreeNode<T> child) {
		if(this.children.size() == 0 ){
			return false;
		}
		
		return this.children.remove(this.children.size() - 1) != null;
	}

	public T getData() {
		return data;
	}

	public void setData(T data) {
		this.data = data;
	}
	
	public static void inOrderTraversal(TreeNode<Object> node, TreeTask<Object> visit){
		if(node != null){
			for(TreeNode<Object> child: node.getChildren()){
				inOrderTraversal(child, visit);
				visit.run(child.getData());
			}
		}
	}
	
	public static void inOrderTraversal(TreeNode<Object> node){
		if(node != null){
			for(TreeNode<Object> child: node.getChildren()){
				inOrderTraversal(child);
				System.out.println(node.getData());
			}
		}
	}

}
interface TreeTask<T extends Object>{
	public void run(T data);
}

class PrintNode<T extends Object> implements TreeTask<T>{
	public void run(T data) {
		System.out.println(data);
	}
}

